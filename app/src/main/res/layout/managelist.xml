<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/device_image"
        android:layout_width="177dp"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/device_image1"
            android:layout_width="134dp"
            android:layout_height="123dp"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg2" />

        <!--        <TextView-->
        <!--            android:id="@+id/add_tv"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:fontFamily="sans-serif-black"-->
        <!--            android:text="M"-->
        <!--            android:textColor="@color/black"-->
        <!--还要有房间的显示列表和模式的显示列表            android:textSize="20sp" />-->

    </LinearLayout>


    <LinearLayout
        android:id="@+id/category"
        android:layout_width="234dp"
        android:layout_height="57dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/device_category"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:text="类型:" />

        <TextView
            android:id="@+id/device_category_display"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:text="电灯泡" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="221dp"
        android:layout_height="104dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/category"
        app:layout_constraintLeft_toRightOf="@+id/device_image">
        <Spinner
            android:id="@+id/manageRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>