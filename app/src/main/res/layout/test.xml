<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/test_light_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="2dp"
        android:text="开灯"
        app:layout_constraintBottom_toTopOf="@+id/test_light_et_bright"
        app:layout_constraintStart_toStartOf="@+id/test_light_et_bright" />

    <Button
        android:id="@+id/test_light_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="关灯"
        app:layout_constraintStart_toStartOf="@+id/test_light_bt_bright"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/test_light_et_bright"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="65dp"
        android:hint="0-10"
        app:layout_constraintBottom_toBottomOf="@+id/test_light_normal"
        app:layout_constraintEnd_toStartOf="@+id/delete_device"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/test_light_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:text="普通模式"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_light_bt_bright" />

    <Button
        android:id="@+id/test_light_bright_de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="亮度-"
        app:layout_constraintBaseline_toBaselineOf="@+id/test_light_bright_in"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/test_light_bright_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="亮度+"
        app:layout_constraintStart_toEndOf="@+id/test_light_bright_de"
        app:layout_constraintTop_toBottomOf="@+id/test_light_normal" />

    <Button
        android:id="@+id/test_light_breathe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="37dp"
        android:text="呼吸灯模式"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_light_bt_bright" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="21dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="@+id/test_light_breathe"
        app:layout_constraintTop_toBottomOf="@+id/test_light_breathe" />

    <Button
        android:id="@+id/test_air_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="开制冷"
        app:layout_constraintBaseline_toBaselineOf="@+id/test_air_close"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/test_air_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="26dp"
        android:text="温度"
        app:layout_constraintBottom_toTopOf="@+id/test_air_open"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/test_air_wetness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="35dp"
        android:text="湿度"
        app:layout_constraintStart_toEndOf="@+id/test_air_open"
        app:layout_constraintTop_toBottomOf="@+id/test_light_bright_in" />

    <Button
        android:id="@+id/test_air_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="27dp"
        android:text="关制冷"
        app:layout_constraintStart_toStartOf="@+id/test_air_wetness"
        app:layout_constraintTop_toBottomOf="@+id/test_air_wetness" />

    <Button
        android:id="@+id/test_curtain_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="147dp"
        android:text="开窗帘"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/test_curtain_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="11dp"
        android:text="关窗帘"
        app:layout_constraintBottom_toBottomOf="@+id/test_curtain_open"
        app:layout_constraintStart_toEndOf="@+id/test_curtain_open" />

    <EditText
        android:id="@+id/test_curtain_et_deep"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="52dp"
        android:hint="00-80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/test_curtain_close"
        app:layout_constraintTop_toBottomOf="@+id/test_curtain_close" />

    <Button
        android:id="@+id/test_curtain_bt_deep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="开到指定deep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/test_curtain_et_deep" />

    <Button
        android:id="@+id/test_light_bt_bright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="182dp"
        android:text="指定亮度"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/test_light_et_bright"
        app:layout_constraintTop_toBottomOf="@+id/test_light_close" />

    <Button
        android:id="@+id/delete_device2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="38dp"
        android:text="删除设备"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/test_light_et_bright"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>