<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seekbar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/voice_tb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/back"
        app:title="加湿器设置"
        app:titleTextColor="@color/lighthui"></androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:id="@+id/open"
        android:layout_width="@dimen/dp_80"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/voice_tb"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#EEF9C1"
        android:elevation="8dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="5dp">
        <TextView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:text="打开"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_25">

        </TextView>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/close"
        android:layout_width="@dimen/dp_80"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/voice_tb"
        app:layout_constraintLeft_toRightOf="@+id/open"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#EEF9C1"
        android:elevation="8dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="5dp">
        <TextView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:text="打开"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_25">

        </TextView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>