<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/smart_bg"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:titleTextColor="@color/white"
        app:title="@string/app_name"
        app:menu="@menu/smarthome_menu"
        android:layout_gravity="end"
        android:layout_margin="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎回家\n主人"
        android:textSize="35dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.03"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.035"
                android:text="开启\n惠居之旅"
                android:textColor="#305f72"
                android:textSize="26dp" />

            <LinearLayout
                android:layout_width="161dp"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg2"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="了解详情"
                    android:textColor="#fff"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/enroll_next" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1.5dp"
                android:layout_weight="1"
                android:background="#ECA9A9AA" />
        </LinearLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/c_drawing"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardBackgroundColor="#EC856EDD"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/rv_drawing"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/iv_drawing"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/drawing_room" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@+id/iv_drawing"
                    android:text="客厅"
                    android:textColor="@color/white1"
                    android:textSize="30dp"
                    android:textStyle="bold" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/c_toilet"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="#EC856EDD"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/rv_toilet"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp">
                    <ImageView
                        android:id="@+id/iv_toilet"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/toilet"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="43dp"
                        android:layout_toRightOf="@+id/iv_toilet"
                        android:text="卫生间"
                        android:layout_centerHorizontal="true"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/white1"/>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rv_bedroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/c_bedroom"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="#EC856EDD"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp">
                    <ImageView
                        android:id="@+id/iv_bedroom"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/bedroom"/>
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="43dp"
                        android:layout_toRightOf="@+id/iv_bedroom"
                        android:text="卧室"
                        android:layout_centerHorizontal="true"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/white1"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>