<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pull_to_refresh_header_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/device_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="300dp" />

    <ImageView
        android:id="@+id/sun"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginTop="370dp"
        android:background="@drawable/half_sun"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/moon"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="290dp"
        android:background="@drawable/moon"
        android:visibility="invisible"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/ruwang"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="380dp"
        android:backgroundTint="#D2EEFF"
        android:elevation="8dp"
        android:visibility="invisible"
        app:cardCornerRadius="1000dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/add_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=" 添加设备"
            android:textColor="#00154F"
            android:textSize="10dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/startNetwork"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="430dp"
        android:backgroundTint="#D2EEFF"
        android:elevation="8dp"
        android:visibility="invisible"
        app:cardCornerRadius="1000dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/startNetwork_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=" 开放入网"
            android:textColor="#00154F"
            android:textSize="10dp" />
    </androidx.cardview.widget.CardView>



    <com.example.smarthome.View.pullextend.ExpendPoint
        android:id="@+id/expend_point"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:padding="1dp"
        />


</RelativeLayout>