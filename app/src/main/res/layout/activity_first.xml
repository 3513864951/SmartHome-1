<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/MainStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FirstActivity"
    android:background="#1f1f1d"
    android:orientation="vertical">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <View
           android:id="@+id/first_lie"
           android:layout_width="20dp"
           android:layout_height="50dp"
           android:background="@drawable/white_lie"
           android:layout_centerHorizontal="true"/>
       <View
           android:id="@+id/second_lie"
           android:layout_width="20dp"
           android:layout_height="100dp"
           android:layout_marginLeft="8dp"
           android:background="@drawable/red_lie"
         android:layout_toRightOf="@id/first_lie"/>
       <View
           android:id="@+id/third_lie"
           android:layout_width="20dp"
           android:layout_height="250dp"
           android:layout_marginLeft="8dp"
           android:background="@drawable/white_lie"
           android:layout_toRightOf="@id/second_lie"/>
       <View
           android:id="@+id/fourth_lie"
           android:layout_width="20dp"
           android:layout_height="200dp"
           android:layout_marginLeft="8dp"
           android:background="@drawable/red_lie"
           android:layout_toRightOf="@id/third_lie"/>
       <View
           android:id="@+id/fifth_lie"
           android:layout_width="20dp"
           android:layout_height="220dp"
           android:layout_marginLeft="8dp"
           android:background="@drawable/green_lie"
           android:layout_toRightOf="@id/fourth_lie"/>
       <View
           android:id="@+id/sixth_lie"
           android:layout_width="20dp"
           android:layout_height="150dp"
           android:layout_marginLeft="8dp"
           android:background="@drawable/white_lie"
           android:layout_toRightOf="@id/fifth_lie"/>



   </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="100sp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/tagLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Home"
                android:textSize="24sp"
                android:textColor="#AAA"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>