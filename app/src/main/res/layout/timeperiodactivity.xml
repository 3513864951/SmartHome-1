<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_time_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/back"
        app:title="时间段设置"
        app:titleTextColor="@color/lighthui"></androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/time_period_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_time_toolbar">

        <LinearLayout
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="从"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/time_start"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textColor="@color/centerColor"
                android:textSize="20sp"
                android:text="0000:00:00:00"
                android:textStyle="bold"
                android:gravity="center"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_time_periodStart"
                android:layout_width="47dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#C6D2A5"
                android:padding="12dp"
                android:text="+"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="4dp"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="337dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="至"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/time_end"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:textColor="@color/centerColor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="0000:00:00:00"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_time_periodEnd"
                android:layout_width="47dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:backgroundTint="#C6D2A5"
                android:gravity="center"
                android:padding="12dp"
                android:text="+"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="4dp"
                app:layout_constraintTop_toBottomOf="@id/time_start"
                tools:layout_editor_absoluteX="337dp" />

        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_repeat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#C6D2A5"
        android:padding="12dp"
        android:text="日期和重复"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_period_layout" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/time_save"
        app:layout_constraintTop_toBottomOf="@id/add_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C6D2A5"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cornerRadius="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>